package Back;
import org.json.JSONException;
import org.json.JSONObject;


/**
 *
 * @author Vieira
 */
public class Projeto {
    
    public static void main(String[] args) throws JSONException {
     
         json = "{\"nomeProjeto\":\"nomeProjeto\",\"dominio\":nomeDominio, \"caminho\":\"caminho\"}";
        
        JSONObject my_obj = new JSONObject(json);

        String nomeProjeto = my_obj.getString("nomeProjeto");
        String dominio = my_obj.getString("dominio");
        String caminho = my_obj.getString("caminho");

        System.out.println("nomeProjeto: " + nomeProjeto);
        System.out.println("dominio: " + dominio);
        System.out.println("caminho: " + caminho);
    }
    
    
    /*  '{"nomeClasse":[
